<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="Skate_Tracker.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#ff7700" Padding="12" CornerRadius="0">
            <Label TextColor="Snow" FontSize="20" HorizontalTextAlignment="Center">Skate Tracker</Label>
        </Frame>
        <Frame WidthRequest="500" HeightRequest="500">
            <maps:Map IsShowingUser="True" x:Name="map" />    
        </Frame>
    </StackLayout>

</ContentPage>
